%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

  %body
    - if signed_in?
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container
            %a.brand(href="/") TaskManager
            .container.nav-collapse
              %ul.nav
                %li.dropdown
                  = link_to("#", class: "dropdown-toggle", id: "drop1", :"data-toggle" => "dropdown") do
                    Пользователи
                    %b.carret
                  %ul.dropdown-menu{ :"aria-labelledby" => "#drop1", :role => "menu" }
                    %li
                      = link_to "Просмотр пользователей", users_path
                    %li
                      = link_to "Добавить пользователя", new_user_path

                %li.dropdown
                  = link_to("#", class: "dropdown-toggle", id: "drop1", :"data-toggle" => "dropdown") do
                    Задачи
                    %b.carret
                  %ul.dropdown-menu{ :"aria-labelledby" => "#drop1", :role => "menu" }
                    %li
                      = link_to "Просмотр задач", stories_path
                    %li
                      = link_to "Создать задачу", new_story_path

                %li= link_to current_user.email, current_user
                %li= link_to "Выйти", log_out_path, method: :delete
    -else
      = link_to "Регистрация", sign_up_path
      %br
      = link_to "Вход", log_in_path

    #wrap
      .container
        .row
          .span12
          - if flash[:notice]
            .alert.alert-success
            = flash[:notice]
          - if flash[:error]
            .alert.alert-error
            = flash[:error]
          = yield

    = javascript_include_tag "application"

