= form_for(@story_comment) do |f|
  - if @story_comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@story_comment.errors.count, "error")
        prohibited this story_comment from being saved:
      %ul
        - @story_comment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :story_id
    %br/
    = f.number_field :story_id
  .field
    = f.label :comment
    %br/
    = f.text_area :comment
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
